#include <iostream>
#include <stack>
#include <string>
using namespace std;

bool isBalanced(string exp)
{
    stack<char> s;
    
    for (char c : exp)
    {
        if (c == '(' || c == '{' || c == '[')
            s.push(c);
        else if (c == ')' && !s.empty() && s.top() == '(')
            s.pop();
        else if (c == '}' && !s.empty() && s.top() == '{')
            s.pop();
        else if (c == ']' && !s.empty() && s.top() == '[')
            s.pop();
        else if (c == ')' || c == '}' || c == ']')
            return false;
    }
    
    return s.empty();
}

int main()
{
    string exp;
    cout << "Enter an expression: ";
    cin >> exp;

    if (isBalanced(exp))
        cout << "Balanced\n";
    else
        cout << "Not Balanced\n";

    return 0;
}
